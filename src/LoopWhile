import java.util.Scanner;

public class LoopWhile {
    public static void main(String[] args) {
        Scanner Leitura = new Scanner(System.in);
        double mediaAvaliacao = 0;
        double nota= 0;
        int contador = 0;

        while (nota != -1){
            System.out.println("Diga a nota do filme, digite -1 para encerrar o programa.: ");
            nota = Leitura.nextDouble();

            if (nota != -1){
                mediaAvaliacao += nota;
                contador++;
            }


        }

        System.out.println("Media: " + mediaAvaliacao / contador);

        }
}
